//= require js/plugins/astro.min.js
//= require js/plugins/lazysizes.min.js

astro.init();

var isInViewport = function (elem) {
    var bounding = elem.getBoundingClientRect();
    return (
        bounding.top >= 0 &&
        bounding.left >= 0 &&
        bounding.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
        bounding.right <= (window.innerWidth || document.documentElement.clientWidth)
    );
};

// var
var stickyNav = function(nav, y) {

    stickyNav.trigger = function(nav, y) {
        if (document.documentElement.scrollTop > y) {
            nav.classList.add('sticky');
        }
        else {
            nav.classList.remove('sticky')
        }
    }

    stickyNav.init = function() {
        stickyNav.trigger(nav, y);
        window.addEventListener('scroll', stickyNav.trigger(nav, y), false);
        console.log(y);
    }

    return stickyNav.init();
}


var stickyNavigation = stickyNav(document.querySelector('#nav'), 28);


